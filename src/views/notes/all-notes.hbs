<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ nombres }}  {{ apellidos}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        
        <!-- DiseÃ±o para borrar-->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
        </form>
      </div>
    </div>
  </div>

  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      
      <h1>Hola  {{user.name}}</h1>
      <center><p clsss="lead">No hay datos.</p></center>
      <a href="/notes/add" class="btn btn-success btn-block">Agregar datos</a>
    </div>
  </div>
  {{/each}}
</div>
