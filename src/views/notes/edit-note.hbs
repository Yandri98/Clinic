{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-5 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar</h3>
    </div>
    <div class="card-body">
      <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">

        <div class="form-group">
          <input type="text" name="nombres" class="form-control" value="{{note.nombres}}"/>
        </div>
        <div class="form-group">
      <input  type="text" name="apellidos" class="form-control" value="{{note.apellidos}}"/>
        </div>
        <div class="form-group">
         <input type="text" name="direccion" class="form-control" value="{{note.direccion}}"/>
        </div>
        <div class="form-group"> 
        <input type="text" name="numero" class="form-control" value="{{note.numero}}"/>
        </div>
         <div class="form-group"> 
        <input type="number" name="edad" class="form-control" value="{{note.edad}}"/>
        </div>
        <div class="form-group"> 
        <input type="number" name="cedula" class="form-control" value="{{note.cedula}}"/>
        </div>
        <div class="form-group"> 
        <input type="number" name="estatura" class="form-control" value="{{note.estatura}}"/>
        </div>
        <div class="form-group"> 
        <textarea type="text" name="diagnostico" class="form-control" value="{{note.diagnostico}}"></textarea>
        </div>
        
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
